<mapper namespace="com.teamProject.syusyu.FaqMapper">

    <select id="count" resultType="int">
        SELECT count(*) FROM faq
    </select>

    <delete id="deleteAll">
        DELETE FROM faq
    </delete>

    <delete id="deleteFaq" parameterType="map">
        DELETE
        FROM faq
        WHERE FAQ_NO = #{faqNo} and REGR_ID = #{regrId}
    </delete>

    <insert id="insertFaq" parameterType="FaqDTO">
        INSERT INTO faq (FAQ_TP, TITLE, CONTENT, REGR_ID)
        VALUES (#{faqTp}, #{title}, #{content}, #{regrId})
    </insert>

<!--    faqList.jsp 에서 faqTP클릭시 해당 하는 글만 출력-->
    <select id="selectFaqTp" parameterType="String" resultType="FaqDTO">
        select FAQ_TP , TITLE, CONTENT
        from faq
        where FAQ_TP = #{faqTp}
        order by REG_DTTM DESC
    </select>

    <select id="selectAll" resultType="FaqDTO">
        SELECT FAQ_NO, FAQ_TP, TITLE, CONTENT, REGR_ID, REG_DTTM
        FROM faq
        ORDER BY REG_DTTM DESC, FAQ_NO DESC
    </select>

    <sql id="selectFromFaq">
        SELECT FAQ_NO, FAQ_TP ,TITLE, CONTENT, REGR_ID,  REG_DTTM
        FROM faq
    </sql>

    <select id="selectFaq" parameterType="int" resultType="FaqDTO">
        SELECT FAQ_NO,FAQ_TP, TITLE, CONTENT, REGR_ID, REG_DTTM
        from faq
        WHERE FAQ_NO = #{faqNo}
    </select>



