    <select id="selectPageFaq" parameterType="map" resultType="FaqDTO">
        SELECT FAQ_NO , FAQ_TP ,TITLE , CONTENT , REG_DTTM
        FROM faq
        ORDER BY REG_DTTM DESC, FAQ_NO DESC
            LIMIT #{offset}, #{pageSize}
    </select>

    <update id="updateFaq" parameterType="FaqDTO">
        UPDATE faq
        SET   TITLE = #{title}
          , CONTENT = #{content}
          , FAQ_TP = #{faqTp}
          , UPD_DTTM = now()
        WHERE FAQ_NO = #{faqNo} and REGR_ID = #{regrId}
    </update>

